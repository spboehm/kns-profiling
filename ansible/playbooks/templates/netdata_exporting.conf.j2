[mongodb:my_mongodb_instance]
    enabled = yes
    destination = mongodb://{{ mongodb_user }}:{{ mongodb_password }}@{{ mongodb_host }}:27017
    database = {{ mongodb_database }}
    collection = {{ mongodb_collection }}
    data source = {{ mongodb_data_source }}
    prefix = netdata
    hostname = {{ hostname }}
    update every = {{ mongodb_update_every }}
    buffer on failures = 10
    timeout ms = 20000
    send names instead of ids = yes
    send charts matching = *
    send hosts matching = localhost *
